# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /Home                                       Application.index
GET     /Vets                                   Vets.list
GET     /Find                                   PetOwners.findPetOwners
GET     /petowners/search                           PetOwners.searchPetOwners
GET     /petowners/add                           PetOwners.addPetOwner
GET     /petowners/find                             PetOwners.findPetOwners
GET     /petowners/show/{<[0-9]+>id}                      PetOwners.showPetOwner
GET     /petowners/edit/{<[0-9]+>id}                      PetOwners.editPetOwner
GET     /petowners/{<[0-9]+>id}/addPet                    Pets.addPet
GET     /petowners/editPet/{<[0-9]+>id}                    Pets.editPet
GET     /pet/{<[0-9]+>id}/addVisit                      Visits.addVisit
GET     /pet/delete/{<[0-9]+>id}                      Pets.delete

# Ignore favicon requests
GET     /favicon.ico                            404

*      /admin           module:crud
*      /                module:secure

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
